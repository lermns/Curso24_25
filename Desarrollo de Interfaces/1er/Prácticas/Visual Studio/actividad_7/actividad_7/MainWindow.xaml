<Window x:Class="actividad_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:actividad_7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="ListPersonas" ItemsSource="{Binding Path=listaPersona}" Margin="210,47,210,262" Width="360" Height="120" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Disabled" MaxHeight="120" VerticalAlignment="Top"/>
        <Button x:Name="ButtonAdd" Content="agregar" HorizontalAlignment="Left" Margin="210,319,0,0" VerticalAlignment="Top" Click="ButtonAdd_Click"/>
        <Button x:Name="ButtonDelete" Content="borrar" HorizontalAlignment="Left" Margin="519,202,0,0" VerticalAlignment="Top" Click="ButtonDelete_Click"/>
        <TextBox x:Name="TextName" HorizontalAlignment="Left" Margin="172,250,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextApe" HorizontalAlignment="Left" Margin="172,282,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
