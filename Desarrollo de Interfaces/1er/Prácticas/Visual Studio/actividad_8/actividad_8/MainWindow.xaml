<Window x:Class="actividad_8.MainLibro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:actividad_8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="DataGridLibros" ItemsSource="{Binding Path=listLibros}" AutoGenerateColumns="True" Height="233" VerticalAlignment="Top" Margin="10,40,10,0"/>
        <Menu x:Name="MenuPrincipal" Height="25" VerticalAlignment="Top" Margin="0,00,0,300">
            <MenuItem x:Name="MenuMn" Header="Menu" Height="24" RenderTransformOrigin="0.5,0.5" Width="47" Click="MenuMn_Click">
                <MenuItem x:Name="MenuNuevo" Header="Nuevo..."/>
            </MenuItem>
        </Menu>
        <Button x:Name="BotonModificar" Content="Modificar" HorizontalAlignment="Left" Margin="624,349,0,0" VerticalAlignment="Top" Click="BotonModificar_Click"/>
    </Grid>
</Window>
