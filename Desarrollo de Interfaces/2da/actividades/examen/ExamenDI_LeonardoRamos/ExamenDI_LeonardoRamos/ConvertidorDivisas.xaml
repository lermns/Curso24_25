<UserControl x:Class="ConvertidorDivisas.ConvertidorDivisas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10">
        <TextBlock Text="Conversor" HorizontalAlignment="Center" />
        <TextBlock Name="MonedaTextBlock" Text="Dolar" HorizontalAlignment="Center" />
        <TextBox Name="CantidadTextBox" Width="100" HorizontalAlignment="Center" Margin="0,5" />
        <TextBlock Name="ResultadoTextBlock" Text="Euro" HorizontalAlignment="Center" />
        <TextBox Name="ResultadoTextBox" Width="100" HorizontalAlignment="Center" Margin="0,5" IsReadOnly="True" />
        <Button Content="Convertir" Width="100" HorizontalAlignment="Center" Margin="0,5" Click="ConvertirButton_Click" />
        <Button Content="Invertir" Width="100" HorizontalAlignment="Center" Margin="0,5" Click="InvertirButton_Click" />
    </StackPanel>
</UserControl>

