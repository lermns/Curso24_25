<Window x:Class="ComponentePersonalizadoPropio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ComponentePersonalizadoPropio"
        Title="Reloj Interactivo" Height="200" Width="400">
    <Grid>
        <!-- Componente de reloj -->
        <local:RelojFormatos x:Name="Reloj" 
                             Is24HourFormat="True" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center" 
                             FormatChanged="InteractiveClock_FormatChanged" 
                             MidnightReached="InteractiveClock_MidnightReached"/>

    </Grid>
</Window>
