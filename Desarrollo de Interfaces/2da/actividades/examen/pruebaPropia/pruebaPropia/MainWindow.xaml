<Window x:Class="PruebaPropia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PruebaPropia"
        mc:Ignorable="d"
        Title="Reloj Interactivo" Height="200" Width="400">
    <Grid>
        <!-- Usar el componente RelojFormatos con formato 24 horas -->
        <local:RelojFormatos x:Name="Reloj" HourFormat="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>




