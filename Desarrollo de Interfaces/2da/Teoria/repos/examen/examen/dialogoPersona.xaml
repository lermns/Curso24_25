<Window x:Class="examen.dialogoPersona"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:examen"
        mc:Ignorable="d"
        Title="dialogoPersona" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textNombre" HorizontalAlignment="Left" Height="23" Margin="470,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textCategoria" HorizontalAlignment="Left" Height="23" Margin="470,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <DatePicker x:Name="dateFecha" HorizontalAlignment="Left" Margin="470,186,0,0" VerticalAlignment="Top"/>
        <Slider x:Name="sliderValoracion" HorizontalAlignment="Left" Margin="435,240,0,0" VerticalAlignment="Top" Width="210"/>
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="172,95,0,0" VerticalAlignment="Top"/>
        <Label Content="Categoría:" HorizontalAlignment="Left" Margin="172,133,0,0" VerticalAlignment="Top"/>
        <Label Content="Fecha de nacimiento:" HorizontalAlignment="Left" Margin="172,184,0,0" VerticalAlignment="Top"/>
        <Label Content="Valoración:" HorizontalAlignment="Left" Margin="172,232,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonAceptar" Content="Aceptar" HorizontalAlignment="Left" Margin="190,335,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-1,0" Click="buttonAceptar_Click"/>
        <Button x:Name="buttonCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="500,335,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-1,0" Click="buttonCancelar_Click"/>

    </Grid>
</Window>
