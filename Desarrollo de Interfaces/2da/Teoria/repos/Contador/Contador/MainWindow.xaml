<Window x:Class="Contador.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contador"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Botón para iniciar el contador -->
        <Button Content="Reiniciar Contador" Click="StartCounter_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>

        <!-- Utiliza tu UserControl1 en el MainWindow -->
        <local:UserControl1 x:Name="userControl1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>