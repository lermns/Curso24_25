<Window x:Class="Calculadora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculadora"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label x:Name="label_Resultado" Grid.ColumnSpan="3" Grid.Row="0" HorizontalAlignment="Right" FontSize="48" Content="0"/>
        <Button x:Name="button_Borrar" Grid.Column="3" Grid.Row="0" Click="Button_Click" FontSize="48" Content="Borrar"></Button>
        <Button x:Name="button7" Grid.Column="0" Grid.Row="1" FontSize="48" Click="button7_Click">7</Button>
        <Button x:Name="button4" Grid.Column="0" Grid.Row="2" FontSize="48" Click="button4_Click">4</Button>
        <Button x:Name="button1" Grid.Column="0" Grid.Row="3" FontSize="48" Click="button1_Click">1</Button>
        <Button x:Name="button_Div" Grid.Column="0" Grid.Row="4" FontSize="48">/</Button>
        <Button x:Name="button8" Grid.Column="1" Grid.Row="1" FontSize="48" Click="button8_Click">8</Button>
        <Button x:Name="button5" Grid.Column="1" Grid.Row="2" FontSize="48" Click="button5_Click">5</Button>
        <Button x:Name="button2" Grid.Column="1" Grid.Row="3" FontSize="48" Click="button2_Click">2</Button>
        <Button Grid.Column="1" Grid.Row="4" FontSize="48">0</Button>
        <Button x:Name="button0" Grid.Column="1" Grid.Row="4" FontSize="48" Click="button0_Click">0</Button>
        <Button x:Name="button9" Grid.Column="2" Grid.Row="1" FontSize="48" Click="button9_Click">9</Button>
        <Button x:Name="button6" Grid.Column="2" Grid.Row="2" FontSize="48" Click="button6_Click">6</Button>
        <Button x:Name="button3" Grid.Column="2" Grid.Row="3" FontSize="48" Click="button3_Click">3</Button>
        <Button x:Name="button_Coma" Grid.Column="2" Grid.Row="4" FontSize="48">.</Button>
        <Button x:Name="button_Sumar" Grid.Column="3" Grid.Row="1" FontSize="48" Click="button_Sumar_Click">+</Button>
        <Button x:Name="button_Menos" Grid.Column="3" Grid.Row="2" FontSize="48" Click="button_Menos_Click">-</Button>
        <Button x:Name="button_Mult" Grid.Column="3" Grid.Row="3" FontSize="48">*</Button>
        <Button x:Name="button_Igual" Grid.Column="3" Grid.Row="4" FontSize="48" Click="button_Igual_Click">=</Button>
    </Grid>

</Window>
