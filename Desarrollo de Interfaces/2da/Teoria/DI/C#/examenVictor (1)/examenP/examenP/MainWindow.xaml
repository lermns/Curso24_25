<Window x:Class="examenP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:examenP"
        mc:Ignorable="d"
        Title="MainWindow" Height="460" Width="800">
    <Grid>
        <DataGrid x:Name="DataGridClientes" ItemsSource="{Binding Path=listaClientes}" Height="313" Margin="0,62,0,0" VerticalAlignment="Top"  HorizontalAlignment="Center" Width="780"/>
        <Menu HorizontalAlignment="Center" Height="39" Margin="0,18,0,0" VerticalAlignment="Top" Width="780">
            <MenuItem x:Name="MenuCliente" Header="Cliente">
                <MenuItem x:Name="NuevoMenuItem" Header="Nuevo..." Click="NuevoMenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Button x:Name="BModificar" Content="Modificar" HorizontalAlignment="Left" Margin="610,389,0,0" VerticalAlignment="Top" Click="BModificar_Click" Height="30" Width="116"/>

    </Grid>
</Window>
