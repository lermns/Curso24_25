<Window x:Class="TetrisWpf.GameStart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GameStart" Height="120" Width="200"
        Background="Black">
    <Grid>
        <TextBlock Margin="0,10,0,0" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Start Game?" VerticalAlignment="Top" Foreground="Red"/>
        <Button Click="Button_Click_Yes" Content="Yes" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Click="Button_Click_No" Content="No" HorizontalAlignment="Right" Margin="0,41,10,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
