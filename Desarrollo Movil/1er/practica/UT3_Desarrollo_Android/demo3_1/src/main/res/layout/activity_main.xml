        app:layout_constraintStart_toStartOf="@+id/Text_23"
        app:layout_constraintTop_toBottomOf="@+id/Text_23" />

    <TextView
        android:id="@+id/Text_25"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/casual"
        android:fontFamily="casual"
        app:layout_constraintStart_toStartOf="@+id/Text_24"
        app:layout_constraintTop_toBottomOf="@+id/Text_24" />

    <TextView
        android:id="@+id/Text_26"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/Text_25"
        app:layout_constraintTop_toBottomOf="@+id/Text_25" />
</androidx.constraintlayout.widget.ConstraintLayout>