        app:layout_constraintStart_toStartOf="@+id/Text_9"
        app:layout_constraintTop_toBottomOf="@+id/Text_9" />

    <TextView
        android:id="@+id/Text_11"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/estilo_en_negrita"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/Text_10"
        app:layout_constraintTop_toBottomOf="@+id/Text_10" />

    <TextView
        android:id="@+id/Text_12"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/estilo_en_cursiva"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/Text_11"
        app:layout_constraintTop_toBottomOf="@+id/Text_11" />

    <TextView
        android:id="@+id/Text_13"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/estilo_en_cursiva_y_negrita"
