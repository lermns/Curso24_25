        app:layout_constraintStart_toStartOf="@+id/Text_12"
        app:layout_constraintTop_toBottomOf="@+id/Text_12" />

    <TextView
        android:id="@+id/Text_14"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/_4_cambiar_tipo_de_fuente"
        style="@style/ExampleText"
        app:layout_constraintStart_toStartOf="@+id/Text_13"
        app:layout_constraintTop_toBottomOf="@+id/Text_13" />

    <TextView
        android:id="@+id/Text_15"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/tipo_de_fuente_sans"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="@+id/Text_14"
        app:layout_constraintTop_toBottomOf="@+id/Text_14" />
    <TextView
        android:id="@+id/Text_16"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/tipo_de_fuente_serif"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="@+id/Text_15"
        app:layout_constraintTop_toBottomOf="@+id/Text_15" />
    <TextView
        android:id="@+id/Text_17"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/tipo_de_fuente_monospace"
        android:typeface="monospace"
        app:layout_constraintStart_toStartOf="@+id/Text_16"
        app:layout_constraintTop_toBottomOf="@+id/Text_16" />

    <TextView
        android:id="@+id/Text_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_5_convertir_urls_en_links_clickeables"
        style="@style/ExampleText"
        app:layout_constraintStart_toStartOf="@+id/Text_17"
        app:layout_constraintTop_toBottomOf="@+id/Text_17" />

    <TextView
        android:id="@+id/Text_19"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:text="@string/https_developer_android_com"
        app:layout_constraintStart_toStartOf="@+id/Text_18"
        app:layout_constraintTop_toBottomOf="@+id/Text_18" />

    <TextView
        android:id="@+id/Text_20"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/_6_convertir_a_may_sculas"
        style="@style/ExampleText"
        app:layout_constraintStart_toStartOf="@+id/Text_19"
        app:layout_constraintTop_toBottomOf="@+id/Text_19" />

    <TextView
        android:id="@+id/Text_21"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="@string/www_google_com"
        app:layout_constraintStart_toStartOf="@+id/Text_20"
        app:layout_constraintTop_toBottomOf="@+id/Text_20" />

    <TextView
        android:id="@+id/Text_22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="@string/_7_cambiar_familia_tipogr_fica"
        style="@style/ExampleText"
        app:layout_constraintStart_toStartOf="@+id/Text_21"
        app:layout_constraintTop_toBottomOf="@+id/Text_21" />

    <TextView
        android:id="@+id/Text_23"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/sans_serif_condensed_medium"
