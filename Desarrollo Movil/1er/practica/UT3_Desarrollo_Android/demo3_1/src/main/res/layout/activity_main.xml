        app:layout_constraintStart_toStartOf="@+id/Text_7"
        app:layout_constraintTop_toBottomOf="@+id/Text_7" />

    <TextView
        android:id="@+id/Text_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_3_cambiar_estilo_de_la_fuente"
        style="@style/ExampleText"
        app:layout_constraintStart_toStartOf="@+id/Text_8"
        app:layout_constraintTop_toBottomOf="@+id/Text_8" />

    <TextView
        android:id="@+id/Text_10"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/estilo_normal"
