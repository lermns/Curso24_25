<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.demo3_1.MainActivity">

    <TextView
        android:id="@+id/Text_1"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:fontFamily="@font/fatal_fighter"
        android:textSize="24sp"
        android:text="@string/ejemplos"
        android:layout_gravity="end"
        android:gravity="center"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Text_2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/_1_cambiar_color"
        style="@style/ExampleText"
        app:layout_constraintStart_toStartOf="@+id/Text_1"
        app:layout_constraintTop_toBottomOf="@+id/Text_1" />

    <TextView
        android:id="@+id/Text_3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/indigo"
        android:text="@string/texto_color_material_indigo_500"
        app:layout_constraintStart_toStartOf="@+id/Text_2"
        app:layout_constraintTop_toBottomOf="@+id/Text_2" />

    <TextView
        android:id="@+id/Text_4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/_2_cambiar_tama_o"
        style="@style/ExampleText"
        app:layout_constraintStart_toStartOf="@+id/Text_3"
        app:layout_constraintTop_toBottomOf="@+id/Text_3" />

    <TextView
        android:id="@+id/Text_5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/tama_o_de_14_sp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/Text_4"
        app:layout_constraintTop_toBottomOf="@+id/Text_4" />

    <TextView
        android:id="@+id/Text_6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/tama_o_de_16_sp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/Text_5"
        app:layout_constraintTop_toBottomOf="@+id/Text_5" />

    <TextView
        android:id="@+id/Text_7"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/tama_o_de_20_sp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/Text_6"
        app:layout_constraintTop_toBottomOf="@+id/Text_6" />

    <TextView
        android:id="@+id/Text_8"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/tama_o_de_24_sp"
