<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp"
    >
    <!--orientacion horizontal por defecto-->

    <!--
    //  cambio cuando la orientacion sea vertical

    android:orientation="vertical" -> este al linearLayout
    android:layout_width="match_parent"-> este
    android:layout_height="0dp" -> y este van en los textViews
    -->

    <!--proporciones de 20% 60% 20%-->
    <TextView
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_weight="2"
        android:background="@color/purple"
        android:text="@string/text_view_1"
        android:textColor="@color/rarete"
        android:textSize="12sp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/purple_2"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_weight="6"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/text_view_2"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/yellow"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_weight="2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/text_view_3"
        />

</LinearLayout>
